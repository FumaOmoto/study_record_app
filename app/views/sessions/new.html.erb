<% provide( :title, "Log in" ) %>
<%= form_with( url: login_path, scope: :session, local: true ) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span>Remember Me</span>
    <% end %>

    <%= f.submit "Log in" %>
<% end %>

<%= link_to "Sign up", signup_path %>
